www.maxreiter.dev, maxreiter.dev {
	root * /srv/maxreiter.dev
	file_server {
		index index.html
	}
	try_files {path} /index.html
	templates
	encode gzip zstd

	handle_errors {
		rewrite * /error.html
		templates
		file_server
	}

	tls {
		resolvers 1.1.1.1
		dns cloudflare {
			{env.CF_API_TOKEN}
		}
	}
}
